module.exports.run = async ({ api, event, handleReply, Users, Currencies }) => {
const { threadID, messageID, senderID } = event;
var data = await Currencies.getData(event.senderID);
var money = data.money
if( money = 0) api.sendMessage(`ğŸ’µ Báº¡n cáº§n cÃ³ 500$ Ä‘á»ƒ tÃ¬m ngÆ°á»i háº¹n hÃ²!`,threadID,messageID)
  else {
  Currencies.setData(event.senderID, options = {money: money - 500})
	return api.sendMessage(`ğŸ“Œ Pháº£n há»“i tin nháº¯n Ä‘á»ƒ chá»n giá»›i tÃ­nh.\n\n[ Boy hoáº·c Girl ]`, event.threadID, (error, info) => {
        global.client.handleReply.push({
            type: "ghep",
            name: this.config.name,
            author: event.senderID,
            messageID: info.messageID
        })  
     })
   }
}
